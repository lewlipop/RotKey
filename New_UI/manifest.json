{
  "manifest_version": 2,
  "name": "RotKey",
  "version": "1.0",
  "description": "Dynamic Session Key Rotation Extension",
  "icons": {
    "16": "/images/RotKeyLogo.png",
    "48": "/images/RotKeyLogo.png",
    "128": "/images/RotKeyLogo.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "/images/RotKeyLogo.png"
  }
}
